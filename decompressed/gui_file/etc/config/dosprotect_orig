
config globals 'globals'
	option rpfilter_log_limit '5/minute'
	option block_tcpsyn_withdata '0'
	option enabled '1'
	option rpfilter '1'

config ratelimit 'tcpsynlimits'
	option proto 'tcp'
	option extra '! -i br-lan --tcp-flags SYN SYN'
	option per_srcip_burst '300'
	option per_srcip_limit '150'
	option per_srcip_buckets '2053'
	option global_burst '1500'
	option global_limit '750'

config ratelimit 'tcpfinlimits'
	option proto 'tcp'
	option extra '! -i br-lan --tcp-flags FIN FIN'
	option per_srcip_burst '300'
	option per_srcip_limit '150'
	option per_srcip_buckets '2053'
	option global_burst '1500'
	option global_limit '750'

config ratelimit 'tcplimits'
	option proto 'tcp'

config ratelimit 'udplimits'
	option proto 'udp'
	option per_srcip_burst '2000'
	option per_srcip_limit '1000'
	option per_srcip_buckets '2053'
	option global_burst '10000'
	option global_limit '5000'

config ratelimit 'icmplimits'
	option proto 'icmp'
	option family 'ipv4'
	option per_srcip_burst '50'
	option per_srcip_limit '5'
	option per_srcip_buckets '1031'
	option global_burst '500'
	option global_limit '50'

config ratelimit 'icmpv6limits'
	option proto 'icmpv6'
	option family 'ipv6'
	option per_srcip_burst '50'
	option per_srcip_limit '5'
	option per_srcip_buckets '1031'
	option global_burst '500'
	option global_limit '50'

config ratelimit 'grelimits'
	option proto 'gre'

config ratelimit 'esplimits'
	option proto 'esp'

config ratelimit 'iplimits'
	option per_srcip_burst '1000'
	option per_srcip_limit '500'
	option per_srcip_buckets '2053'
	option global_burst '3000'
	option global_limit '1500'

